.iziToast

	&.iziToast-layout2
		& .iziToast-body
			& .iziToast-texts, & .iziToast-message
				width 100%

	&.iziToast-layout3
		border-radius: 2px;
		&::after
			display none

/*
 * EXAMPLE new layouts
